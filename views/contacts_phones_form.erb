<h3>Add a contact number to <%=@contact.first_name()%> <%=@contact.last_name()%></h3>

<form action="/phone" method="post">
  <!-- type hidden value auto input, watch out for that, can leverage on previous artist form -->
  <input id="contact_id" type="hidden" name="contact_id"
  value="<%= @contact.id()%>" class"form-control">

  <div class="form-group">
    <label for="title">Area Code:</label>
    <input id="area_code" name="area_code" type="number" class="form-control">
  </div>

  <div class="form-group">
    <label for="title">Number:</label>
    <input id="number" name="number" type="number" class="form-control">
  </div>

  <div class="form-group">
    <label for="title">Type:</label>
      <select id="type" name="type" type="text" class="form-control">
        <option value="home">home</option>
        <option value="mobile">mobile</option>
      </select>
  </div>

  <button type="submit" class="btn btn-success">Add Number</button>
</form>
